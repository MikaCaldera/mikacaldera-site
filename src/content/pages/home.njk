<section class="homepage-card container">
  <div class="homepage-card-wrapper">
    <div class="homepage-card-body">
      <div class="homepage-card-body-top">
        <figure>
            <img src="{{ logo }}" alt="Mika's logo" />
        </figure>
        <h1>{{ pageTitle }}</h1>
        <p>{{ body }}</p>
      </div>
      <div class="homepage-card-body-bottom">
        <div class="homepage-card-buttons">
          <a href="{{ buttonLink }}" class="button" {% if newTab == true %}target="_blank"{% endif %}>{{ buttonText }}</a>
          <button type="button" class="button" data-bs-toggle="modal" data-bs-target="#contactModal">
            say hello
          </button>
        </div>
        <div class="homepage-card-social">
          {% for socialLink in socialLinks %}
          <a href="{{ socialLink.socialLinkURL }}" class="social-link">
            <img src="{{ socialLink.socialLinkIcon }}" alt="{{ socialLink.socialLinkText }}" />
          </a>
          {% endfor %}
        </div>
        
       
      </div>
    </div>
    <div class="homepage-card-image" style="background-image: url('{{ heroImage }}')"></div>
  </div>
</section>
<div class="modal fade" id="contactModal" tabindex="-1"  aria-labelledby="contactModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
              <form name="contact" method="POST" data-netlify="true" data-netlify-recaptcha="true">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="contactModalLabel">say hello</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
              
                  <div class="mb-3">
                    <label for="nameInput" class="form-label">Name
                    <input name="name" type="text" class="form-control" id="nameInput" placeholder="full name">
                    </label>
                  </div>
                  <div class="mb-3">
                    <label for="emailInput" class="form-label">Email Address
                    <input name="email" type="email" class="form-control" id="emailInput" placeholder="name@example.com">
                    </label>
                  </div>
                  <div class="mb-3">
                    <label for="textInput" class="form-label">Message
                    <textarea name="message" class="form-control" id="textInput" rows="5" placeholder="your message ..."></textarea>
                    </label>
                  </div>
                  <div class="form-footer">
                  <div data-netlify-recaptcha="true"></div>
                  <button type="submit" class="btn btn-primary">submit</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>